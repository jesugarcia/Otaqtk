<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.profile_settings.SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121E3A">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout13"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@drawable/topbar_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Settings"
                android:textColor="#FDFDFD"
                android:textSize="21sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.407"
                app:layout_constraintStart_toEndOf="@+id/button_back_setting"
                app:layout_constraintTop_toTopOf="parent"
                 />

            <ImageView
                android:id="@+id/button_back_setting"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_marginStart="32dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="315dp"
            android:layout_height="2dp"
            android:background="#DEDEDE"
            app:layout_constraintBottom_toTopOf="@+id/acc_configuration_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/acc_configuration_button"
            android:layout_width="315dp"
            android:layout_height="42sp"
            android:layout_marginTop="56dp"
            android:background="@drawable/information_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout13">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/ic_profile_outline_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"
                android:text="Account configuration"
                android:textColor="#FFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="315dp"
            android:layout_height="2dp"
            android:background="#DEDEDE"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/acc_configuration_button" />

        <LinearLayout
            android:id="@+id/terms_conditions_button"
            android:layout_width="315dp"
            android:layout_height="42sp"
            android:background="@drawable/information_shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/ic_list" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"
                android:text="Terms and conditions"
                android:textColor="#FFFF"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/view2_settings"
            android:layout_width="315dp"
            android:layout_height="2dp"
            android:background="#DEDEDE"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/terms_conditions_button" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_logOut"
            android:layout_width="335dp"
            android:layout_height="67dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/login_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Log out"
                android:textColor="#FFFF"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>