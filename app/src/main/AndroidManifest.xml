<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.otaqtk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.details.all_chapters.AllChaptersActivity"></activity>
        <activity android:name=".ui.mos_popular.MostPopularActivity" />
        <activity android:name=".ui.trending.TrendingActivity" />
        <activity android:name=".ui.categories.CategoryActivity" />
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.details.chapter_info.ChapterInfoActivity" />
        <activity android:name=".ui.details.manga_info.MangaInfoActivity" />
        <activity android:name=".ui.terms_conditions.TermsActivity" />
        <activity android:name=".ui.edit_profile.EditProfileActivity" />
        <activity android:name=".ui.profile_settings.SettingsActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.details.detail_volume.DetailVolumeActivity" />
        <activity android:name=".ui.splash_screen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.details.detail_manga.DetailMangaActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>